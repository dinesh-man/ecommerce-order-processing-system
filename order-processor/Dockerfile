FROM golang:1.24-bullseye AS builderWORKDIR /ecommerce-order-processing-systemCOPY go.mod go.sum ./RUN go mod downloadCOPY order-processor/ order-processor/COPY pkg/ pkg/WORKDIR /ecommerce-order-processing-system/order-processorRUN CGO_ENABLED=0 GOOS=linux go build -o order-processor .FROM alpine:3.19WORKDIR /root/COPY --from=builder /ecommerce-order-processing-system/order-processor/order-processor .EXPOSE 8080CMD ["./order-processor"]